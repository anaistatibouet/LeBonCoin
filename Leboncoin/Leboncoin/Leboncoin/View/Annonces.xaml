<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Leboncoin.View.Annonces"
             Title="Détail de l'Annonce">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Titre" FontAttributes="Bold"/>
            <Label Text="{Binding Annonce.Titre}"/>
            <Label Text="Description" FontAttributes="Bold"/>
            <Label Text="{Binding Annonce.Description}"/>
            <Label Text="Categorie" FontAttributes="Bold"/>
            <Label Text="{Binding Categorie.Nom}"/>
            <Label Text="Utilisateur" FontAttributes="Bold"/>
            <Label Text="{Binding Utilisateur.Nom}"/>
            <Label Text="Prix" FontAttributes="Bold"/>
            <Label Text="{Binding Annonce.Prix}"/>
            <Label Text="Téléphone" FontAttributes="Bold"/>
            <Label Text="{Binding Annonce.Tel}"/>
            <Button Text="Appeler" Command="{Binding ComposerNum}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>